<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
        x:Class="AvaloniaApplication1.MainWindow"
		x:Name="MainWindow1" 
        Title="AvaloniaApplication1">

	<Grid>
		<!-- Define two rows with 40% and 60% height -->
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<!-- 40% -->
			<RowDefinition Height="7*"/>
			<!-- 60% -->
		</Grid.RowDefinitions>

		<!-- First ScrollViewer -->
		<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="0">
			<StackPanel x:Name="StackProgressPanel" Margin="20">
				<!-- Add content dynamically or statically -->
			</StackPanel>
		</ScrollViewer>

		<!-- Second ScrollViewer -->
		<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="1">
			<StackPanel x:Name="MainStackPanel" Margin="20">
				<!-- Add content dynamically or statically -->
			</StackPanel>
		</ScrollViewer>
	</Grid>

</Window>
